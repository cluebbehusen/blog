---
interface Props {
  title: string;
  description?: string;
  image?: string;
  published?: Date;
  updated?: Date;
  isArticle?: boolean;
}

const { title, description, image, published, updated, isArticle = false } = Astro.props;
const siteUrl = Astro.site?.toString().replace(/\/$/, '') ?? '';
const ogImage = image ? `${siteUrl}${image}` : undefined;
const canonicalUrl = Astro.url.href;

const jsonLd = isArticle && published ? JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "image": ogImage,
  "datePublished": published.toISOString(),
  "dateModified": (updated ?? published).toISOString(),
  "author": {
    "@type": "Person",
    "name": "Connor Luebbehusen",
    "url": siteUrl
  },
  "publisher": {
    "@type": "Person",
    "name": "Connor Luebbehusen"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalUrl
  }
}) : null;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#141414" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="alternate" type="application/rss+xml" title="luebbehusen.dev" href="/rss.xml" />
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:type" content={isArticle ? "article" : "website"} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="luebbehusen.dev" />
    {description && <meta property="og:description" content={description} />}
    {ogImage && <meta property="og:image" content={ogImage} />}
    {isArticle && published && <meta property="article:published_time" content={published.toISOString()} />}
    {isArticle && updated && <meta property="article:modified_time" content={updated.toISOString()} />}
    <!-- Twitter -->
    {ogImage && <meta name="twitter:card" content="summary_large_image" />}
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    <!-- JSON-LD -->
    {jsonLd && <script type="application/ld+json" set:html={jsonLd} />}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <header>
        <a href="/" class="logo">connor luebbehusen</a>
        <nav>
          <a href="mailto:connor@luebbehusen.dev" aria-label="Email" title="connor@luebbehusen.dev">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="16" x="2" y="4" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </a>
          <a href="https://github.com/cluebbehusen" target="_blank" rel="noopener" aria-label="GitHub" title="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
              <path d="M9 18c-4.51 2-5-2-7-2"/>
            </svg>
          </a>
          <a href="https://www.linkedin.com/in/connor-luebbehusen" target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect width="4" height="12" x="2" y="9"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
          <a href="/rss.xml" aria-label="RSS Feed" title="RSS Feed">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 11a9 9 0 0 1 9 9"/>
              <path d="M4 4a16 16 0 0 1 16 16"/>
              <circle cx="5" cy="19" r="1"/>
            </svg>
          </a>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <a href="mailto:connor@luebbehusen.dev">connor@luebbehusen.dev</a>
      </footer>
    </div>
  </body>
</html>

<style>
  :global(*) {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :global(:root) {
    --bg-primary: #141414;
    --bg-secondary: #1c1c1c;
    --bg-tertiary: #262626;
    --text-primary: #e5e5e5;
    --text-secondary: #b8b8b8;
    --text-muted: #737373;
    --accent: #60a5fa;
    --accent-hover: #93c5fd;
    --border: #2e2e2e;
  }

  :global(html) {
    font-family: ui-monospace, SFMono-Regular, "SF Mono", Menlo, Consolas, "Liberation Mono", monospace;
    font-size: 16px;
    line-height: 1.6;
    color: var(--text-primary);
    background: var(--bg-primary);
  }

  :global(a) {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.15s;
  }

  :global(a:hover) {
    color: var(--accent-hover);
  }

  body {
    min-height: 100vh;
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
  }

  .logo {
    font-weight: 600;
    color: var(--text-primary);
    font-size: 1rem;
  }

  .logo:hover {
    color: var(--accent);
  }

  nav {
    display: flex;
    gap: 1rem;
  }

  nav a {
    color: var(--text-muted);
    display: flex;
    align-items: center;
  }

  nav a:hover {
    color: var(--text-primary);
  }

  main {
    flex: 1;
    padding: 3rem 0;
  }

  :global(footer) {
    padding: 2rem 0;
    border-top: 1px solid var(--border);
    font-size: 0.875rem;
    display: flex;
    justify-content: flex-end;
  }

  :global(footer a) {
    color: var(--text-muted);
  }

  :global(footer a:hover) {
    color: var(--accent);
  }
</style>
